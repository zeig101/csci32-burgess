// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("MY_APP_DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id       String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  reviews       Review[]
}

model Game {
  game_id   String @id @default(cuid())
  title     String
  genre1    Genre @relation("PrimaryGenre", fields: [genre1_id], references: [genre_id])
  genre1_id String
  genre2    Genre @relation("SecondaryGenre", fields: [genre2_id], references: [genre_id])
  genre2_id String
  reviews   Review[]
}

model Genre {
  genre_id  String @id @default(cuid())
  name      String
  games1    Game[] @relation("PrimaryGenre")
  games2    Game[] @relation("SecondaryGenre")
}

model Review {
  review_id   String  @id @default(cuid())
  rating      Int     @default(0) //@check(rating >= 0 && rating <= 100) prisma doesn't actually support @check apparently so I need to verify correct range on input later when I make the inputs.
  user        User    @relation(fields: [user_id], references: [user_id])
  user_id     String
  game        Game    @relation(fields: [game_id], references: [game_id])
  game_id     String
}
